     <link name="brush">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:cylinder_inertia m="3." r="0.3" l="0.1" xyz="0 0 0" rpy="0 0 0"/>
    </link>

    <joint name="base_to_brush" type="fixed">
        <parent link="base_link"/>
        <child link="brush"/>
        <origin xyz="0 0.22 0.035" rpy="0 0 0"/>
