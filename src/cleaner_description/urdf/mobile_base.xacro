<?xml version="1.0"?>

<robot xmlns:xacro="hattp://www.ros.org/wiki/xacro">
    <link name="base_footprint"/>
    <joint name="base_footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.015" rpy="0 0 0"/>
    </joint>

    <xacro:property name="base_length" value="0.6"/>
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.55 ${base_length} 0.15"/>
            </geometry>
            <material name="white"/>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.55 ${base_length} 0.15"/>
            </geometry>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
        </collision>
        <xacro:box_inertia m="6." x="0.55" y="0.6" z="0.15" xyz="0 0 0.075" rpy="0 0 0"/>
    </link>

	<link name="base_scan">
		<visual>
			<geometry>
				<cylinder radius="0.09" length="0.06"/>
			</geometry>
			<material name="black"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
		</visual>
		<collision>
			<geometry>
				<cylinder radius="0.09" length="0.06"/>
			</geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
		</collision>
        <xacro:cylinder_inertia m="0.2" r="0.09" l="0.03" xyz="0 0 0" rpy="0 0 0"/>
	</link>
    <joint name="base_to_scan" type="fixed">
        <parent link="base_link"/>
        <child link="base_scan"/>
        <origin xyz="0 0 0.18" rpy="0 0 0"/>
    </joint>

    <link name="left_wheel1">
        <visual>
            <geometry>
                <cylinder radius="0.09" length="0.025"/>
            </geometry>
            <material name="black"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.09" length="0.025"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:cylinder_inertia m="0.5" r="0.09" l="0.025" xyz="0 0 0" rpy="0 0 0"/>
    </link>
    <joint name="left_wheel1_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel1"/>
        <origin xyz="-0.29 0 0.075" rpy="0 ${pi/2.} ${pi}"/>
        <axis xyz="0 0 1"/>
    </joint>

